<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		    <mapper namespace="com.pet.home.sell.ShopCartDAO">
		    	<insert id="setShopCartAdd" parameterType="ShopCartDTO">
		    		INSERT INTO SHOPCART VALUES(SELLITEM_SEQ.NEXTVAL,#{itemNum},'guest',#{itemPrice},1,'1')
		    	</insert>
		    	
		  		<select id="getShopCartCheck" parameterType="ShopCartDTO" resultType="ShopCartDTO">
		  			SELECT ITEMNUM FROM SHOPCART WHERE ITEMNUM=#{itemNum}
		  		</select>
		  		
		  		<delete id="setShopCartDelete" parameterType="ShopCartDTO">
		  			DELETE SHOPCART WHERE ITEMNUM=#{itemNum}
		  		</delete>
		  		
		  		<update id="setShopCartUpdate" parameterType="ShopCartDTO">
		  			UPDATE SHOPCART SET TOTALCOUNT=#{totalCount} WHERE ITEMNUM=#{itemNum}
		  		</update>
		    
		    </mapper>